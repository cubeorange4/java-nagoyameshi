                                 <nav aria-label="店舗一覧ページ">
                                     <ul class="pagination">
                                         <li class="page-item">
                                             <span th:if="${shop.isFirst()}" class="page-link disabled">前</span>
                                             <a th:unless="${shop.isFirst()}" th:href="@{/admin/shops(page = ${shop.getNumber() - 1})}" class="page-link samuraitravel-page-link">前</a>
                                         </li>
                                         <li th:each="i : ${#numbers.sequence(0, shop.getTotalPages() - 1)}" class="page-item">
                                             <span th:if="${i == shop.getNumber()}" class="page-link active samuraitravel-active" th:text="${i + 1}"></span>
                                             <a th:unless="${i == shop.getNumber()}" th:href="@{/admin/shops(page = ${i})}" class="page-link samuraitravel-page-link" th:text="${i + 1}"></a>
                                         </li>
                                         <li class="page-item">                        
                                             <span th:if="${shop.isLast()}" class="page-link disabled">次</span>
                                             <a th:unless="${shop.isLast()}" th:href="@{/admin/shops(page = ${shop.getNumber() + 1})}" class="page-link samuraitravel-page-link">次</a>
